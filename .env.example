# MezoFi Environment Configuration

# Database
DATABASE_URL="file:./dev.db"

# Authentication
BETTER_AUTH_SECRET="your-secret-key-here-generate-a-strong-one"
BETTER_AUTH_URL="http://localhost:3000"

# Mezo Network Configuration
MEZO_API_KEY="your-mezo-api-key"
MEZO_BASE_URL="https://api.mezo.org"
MEZO_NETWORK="testnet" # or "mainnet"
MEZO_WEBHOOK_SECRET="your-webhook-secret"

# Pricing & Exchange Rates
PRICING_ORACLE_API_KEY="your-coingecko-or-oracle-api-key"
PRICING_CACHE_DURATION_MS="300000" # 5 minutes
FALLBACK_USD_INR_RATE="83.50"
FALLBACK_USD_EUR_RATE="0.92"
FALLBACK_USD_GBP_RATE="0.79"

# OCR & Image Processing
GOOGLE_CLOUD_VISION_API_KEY="your-google-vision-api-key"
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
# Alternative: Tesseract.js (no API key needed)

# File Upload & Storage
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"
# Alternative: AWS S3, Cloudinary, etc.
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket-name"
AWS_REGION="us-east-1"

# Notifications
# Push notifications (optional)
FIREBASE_SERVER_KEY="your-firebase-server-key"
FIREBASE_SENDER_ID="your-firebase-sender-id"

# Email notifications (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@mezofi.com"

# WebSocket/Real-time (optional)
SOCKET_IO_PORT="3001"
REDIS_URL="redis://localhost:6379" # For scaling Socket.IO

# Security & Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="60"
JWT_SECRET="another-strong-secret-for-jwt-if-used"
ENCRYPTION_KEY="32-character-encryption-key-for-sensitive-data"

# Application Settings
APP_NAME="MezoFi"
APP_URL="http://localhost:3000"
APP_ENV="development" # development, staging, production
LOG_LEVEL="debug" # error, warn, info, debug

# Feature Flags
ENABLE_AUTO_BORROW="true"
ENABLE_YIELD_VAULTS="true"
ENABLE_OCR_PROCESSING="true"
ENABLE_QR_PAYMENTS="true"
ENABLE_PUSH_NOTIFICATIONS="false"

# Limits & Constraints
MAX_LOAN_AMOUNT_MUSD="10000"
MIN_LOAN_AMOUNT_MUSD="10"
MAX_ACTIVE_LOANS_PER_USER="5"
MIN_COLLATERAL_RATIO="1.10" # 110%
DEFAULT_LOAN_DURATION_DAYS="30"
MAX_LOAN_DURATION_DAYS="365"

# QR Code Settings
QR_CODE_EXPIRY_HOURS="24"
QR_CODE_MAX_AMOUNT_FIAT="10000"

# Expense Processing
OCR_CONFIDENCE_THRESHOLD="0.8"
MAX_RECEIPT_FILE_SIZE_MB="10"
SUPPORTED_IMAGE_FORMATS="jpg,jpeg,png,pdf"

# Monitoring & Analytics (optional)
SENTRY_DSN="your-sentry-dsn-for-error-tracking"
GOOGLE_ANALYTICS_ID="your-ga-tracking-id"
MIXPANEL_TOKEN="your-mixpanel-token"

# Development Only
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_WS_URL="http://localhost:3001"
NEXT_PUBLIC_ENABLE_DEBUG="true"